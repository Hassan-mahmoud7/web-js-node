{{>header}}
{{>navbar}}
<section class="container my-4">
    <h3 class="text-center text-primary">Show All COSTOMERS</h3>
    <table class="table table-stripped">
        <thead>
            <th>id</th>
            <th>name</th>
            <th>accNum</th>
            <th>Balance</th>
            <th>transactions</th>
        </thead>
        <tbody>

            {{#if hasUsers}}
            {{#each users}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.accNum}}</td>
                <td>{{this.Balance}}</td>
                <td>{{this.transactions}}</td>
                <td>
                    <a href="/users/{{this._id}}" class="btn btn-primary mx-3">Show</a>
                    <a href="/addTransaction/{{this._id}}" class="btn btn-danger mx-3">transactions</a>
                   
                </td>
            </tr>
            {{/each}}
             {{else}}
            <tr>
                <td colspan="4" class="alert alert-danger">
                    no costomers

                </td>
            </tr>
            {{/if}}
        </tbody>
    </table>
</section>
{{>footer}}